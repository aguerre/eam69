{% extends 'EAMDefaultBundle::layout.html.twig' %}
{% block body %}
<div class="wrapper">
    {% include 'EAMDefaultBundle::header.html.twig' %}
    <div class="clear"></div>
    <!-- BreadCrumb Start -->
    <div class="breadcrumb webkit">
        <!-- Container Start -->
        <div class="container">
            <h1 class="color">Contactez Nous</h1>
        </div>
        <!-- Container End -->
    </div>
    <!-- BreadCrumb End -->
    <div class="clear"></div>
    <!-- Content Start -->
    <div class="content">
        <!-- Container Start -->
        <div class="container">
            <!-- Row Start -->
            <div class="row">
                <!-- Span6 Start -->
                <div class="span6">
                    <!-- Comments Form Start -->
                    <div id="rispond">
                        {{ form_start(form, {'attr' : { 'class' : 'comments-form'}}) }}
                        <div class="heading"><h2><span class="color">Votre </span> message</h2></div>
                        <p class="name">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom) }}
                        </p>
                        <p class="email">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                        </p>
                        <p>
                            {{ form_label(form.sujet) }}
                            {{ form_widget(form.sujet) }}
                        </p>
                        <p>
                            {{ form_label(form.message) }}
                            {{ form_widget(form.message) }}
                        </p>
                        <p>
                            <input type="submit" value="Envoyer" class="bgcolor">
                        </p>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                    <!-- Comments Form End -->
                </div>
                <!-- Span6 End -->
                <!-- Span6 Start -->
                <div class="span6">
                    <!-- Text Widget Start -->
                    <div class="widget widget-text">
                        <div class="heading"><h2><span class="color">Information de</span> Contact</h2></div>
                        <p>Nous vous recontacterons d√®s que possibe.</p>
                        <ul>
                            <li>Email:<a href="#" class="colorhover">contact@eam-69.fr</a></li>
                        </ul>
                    </div>
                    <!-- Text Widget End -->
                </div>
                <!-- Span6 End -->
            </div>
            <!-- Row End -->
        </div>
        <!-- Container End -->
    </div>
    <!-- Content End -->
    {% include 'EAMDefaultBundle::footer.html.twig' %}
</div>
<!--- Wrapper End -->
{% endblock %}