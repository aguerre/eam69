{% extends 'EAMDefaultBundle::layout.html.twig' %}
{% block body %}
<div class="wrapper">
    <div class="content">
        <!-- Container Start -->
        <div class="container">
            <!-- Row Start -->
            <div class="row">
                <a href="{{ path('eam_default_galleries_albums') }}" class="btn">Retour albums</a>
                <!-- Span12 Start -->
                <div class="span12">
                    {{ form_start(form, {'attr': { 'class': 'form-horizontal' }}) }}
                    <div class="control-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, {'attr': { 'class': 'form-control' }}) }}
                    </div>
                    <div class="control-group">
                        {{ form_label(form.year) }}
                        {{ form_widget(form.year, {'attr': { 'class': 'form-control' }}) }}
                    </div>
                    <div class="control-group">
                        {{ form_label(form.date) }}
                        {{ form_widget(form.date, {'attr': { 'class': 'controls' }}) }}
                    </div>
                    <div class="row">
                        <div class="span12">
                            <div class="control-group">
                                <input type="submit" class="btn">
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}