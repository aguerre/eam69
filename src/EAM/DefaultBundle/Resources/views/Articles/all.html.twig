{% extends 'EAMDefaultBundle::layout.html.twig' %}
{% block body %}
<div class="wrapper">
    {% include 'EAMDefaultBundle::header.html.twig' %}
    <div class="clear"></div>
    <div class="content">
        <!-- Container Start -->
        <div class="container">
            <!-- Row Start -->
            <div class="row">
                <a href="{{ path('eam_default_default_index') }}" class="btn">Retour accueil</a>
                <!-- Span12 Start -->
                {% for article in articles %}
                <div class="row span12">
                    <h3>{{ article.titre }} - le {{ article.date|date('d/m/Y') }}</h3>
                    <a href="{{ path('eam_default_articles_voir', { 'id': article.id })}}">Voir</a>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}